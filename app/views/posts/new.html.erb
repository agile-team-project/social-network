<div class="booyah-box col-10 offset-1">
  <h1>New Post</h1>
  <%= simple_form_for @post do |f| %>
    <%= f.input :text %>
    <%= f.label :photo %>
    <%= f.file_field :photo%>
    <%= f.label :video %>
    <%= f.file_field :video %>
    <br />
    <%= f.submit 'Post', class: 'btn btn-primary' %>
    <%= link_to 'Cancel', root_path, class: "btn btn-secondary" %>
    <% end %>
</div>

