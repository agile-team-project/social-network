<div class="booyah-box col-10 offset-1">
  <div class="banner">
    <%= image_tag current_group.group_banner.url class: 'img-fluid' %>
  </div>

  <h1 align="left"> <%= current_group.name %></h1>


  <br />
  <h2><%= current_group.description %></h2>

  <% if !current_group.users.include? current_user %>

    <%= link_to 'Join Group',join_group_path(current_group), method: :patch, class: 'btn btn-primary' %>

  <% elsif (current_group.users.include? current_user) && !(current_user == current_group.owner) %>

    <%= link_to 'Leave Group', leave_group_path(current_group), method: :patch, class: 'btn btn-primary' %>

  <% else current_user == current_group.owner %>
    <%= link_to 'Delete group', group_path(current_group), method: :delete, class: 'btn btn-primary' %>

  <% end %>

</div>